<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/background</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowLightStatusBar">@bool/dark_system_bars</item>
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">@bool/dark_system_bars</item>
        <item name="background">@color/background</item>
    </style>


    <style name="textBox">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="authTextInputLayout">
        <item name="android:layout_margin">@dimen/edit_text_layout_margin</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:background">@color/background</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>

    <style name="transparentButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
<!--    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">-->
<!--        &lt;!&ndash; Customize color of navigation drawer icon and back arrow &ndash;&gt;-->
<!--        <item name="colorControlNormal">#A75700</item>-->
<!--    </style>-->
    <style name="AppThemeM" parent="Theme.MaterialComponents.Light.DarkActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/appbar</item>
        <item name="boxStrokeColor">@color/appbar</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="colorOnPrimary">@color/appbar</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:backgroundDimAmount">.1</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="AppThemeM">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="borderWidth">2dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Detail" parent="AppTheme">
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowEnterTransition">@transition/detail_enter</item>
        <item name="android:windowReturnTransition">@transition/detail_return</item>
    </style>


    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/light_black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="LightMode" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/black_overlay</item>
        <item name="button_text_color">@color/colorAccent</item>
    </style>

    <style name="DarkMode" parent="Theme.AppCompat">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/white_overlay</item>
        <item name="button_text_color">@color/colorAccent</item>
    </style>


</resources>